{
  "name": "crema-app-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/cli": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "@types/jest": "^24.0.0",
    "@types/node": "10.12.21",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "cypress": "^3.1.5",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "hygen": "^2.1.1",
    "loki": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-scripts": "2.1.3",
    "react-test-renderer": "^16.8.2",
    "react-testing-library": "^7.0.0",
    "serve": "^10.1.2",
    "source-map-explorer": "^1.6.0",
    "start-server-and-test": "^1.7.11",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "start:ci": "SKIP_PREFLIGHT_CHECK=true npm-run-all build static",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "test": "SKIP_PREFLIGHT_CHECK=true react-scripts test",
    "new:component": "hygen component new",
    "new:util": "hygen util new",
    "prepush": "npm run test:ci",
    "static": "serve -s build",
    "test:ci": "CI=true npm-run-all test:lint \"test:unit -- -i\" test:playground:build test:visual:ci test:e2e:ci",
    "test:e2e": "cypress run",
    "test:e2e:ci": "start-server-and-test start:ci http://localhost:5000 test:e2e",
    "test:lint": "eslint -c ./.eslintrc.js 'src/**/*.{ts,tsx}'",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:playground": "NODE_ENV=loki BABEL_ENV=development start-storybook -p 9009 -s public",
    "test:playground:build": "build-storybook",
    "test:unit": "npm test -- --env=jsdom",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:coverage:ci": "npm run test:unit:coverage && codecov",
    "test:unit:coverage:watch": "npm run test:unit:coverage -- --watch",
    "test:visual": "CI=true loki --port 9009",
    "test:visual:ci": "loki --reactUri file:./storybook-static",
    "test:visual:approve": "npm run test:visual -- approve",
    "test:visual:update": "npm run test:visual -- update",
    "test:analyze": "npm-run-all build && source-map-explorer build/static/js/main.*",
    "build-storybook": "build-storybook -s public"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prepush"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/*.d.ts",
      "!node_modules",
      "!src/**/(stories).{ts,tsx}",
      "!src/**/(test).{ts,tsx}",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/state/index.ts",
      "!src/types/**/*.ts",
      "src/**/*.{ts,tsx}"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "loki": {
    "requireReference": true,
    "configurations": {
      "chrome": {
        "target": "chrome.docker",
        "width": 800,
        "height": 800,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
